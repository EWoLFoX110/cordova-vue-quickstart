  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Browser",
      "type": "cordova",
      "request": "launch",
      "platform": "browser",
      "target": "chrome",
      "simulatePort": 8000,
      "livereload": true,
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Run Android on device",
      "type": "cordova",
      "request": "launch",
      "platform": "android",
      "target": "device",
      "port": 9222,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run Browser LR",
      "type": "cordova",
      "request": "launch",
      "platform": "browser",
      "target": "chrome",
      "simulatePort": 8000,
      "livereload": true,
      "sourceMaps": false,
      "cwd": "${workspaceFolder}"
    }
  ]
}